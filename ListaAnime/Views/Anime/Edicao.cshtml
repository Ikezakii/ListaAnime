@model List<AnimeModel>
@{
    ViewData["Title"] = "Pagina com infos";
}


<div class="text-center">
    <h1 class="display-4">Edição</h1>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <table class="table" id="table-animes">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col"></th>
                
            </tr>
        </thead>
        @if (Model != null && Model.Any())
        {
            foreach (AnimeModel item in Model)
            {
                <tbody>
                    <tr>
                        <th>@item.Id</th>
                        <th>@item.Nome</th>
                        <th>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Anime" asp-action="Editar">Editar</a>
                                <a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Anime" asp-action="Apagar">Excluir</a>
                                
                            </div>
                        </th>
                    </tr>
                </tbody>
            }
        }


    </table>
</div>
